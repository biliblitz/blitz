{
  "type": "module",
  "scripts": {
    "build": "pnpm build:blitz && pnpm build:vite && pnpm build:vite-plugin-mdx && pnpm build:vite-plugin-static && pnpm build:example:basic && pnpm build:example:minimal && pnpm build:example:adapter-static",
    "build:blitz": "cd packages/blitz && pnpm build",
    "build:vite": "cd packages/vite && pnpm build",
    "build:vite-plugin-mdx": "cd packages/vite-plugin-mdx && pnpm build",
    "build:vite-plugin-static": "cd packages/vite-plugin-static && pnpm build",
    "build:example:basic": "cd examples/basic && pnpm build",
    "build:example:minimal": "cd examples/minimal && pnpm build",
    "build:example:adapter-static": "cd examples/adapter-static && pnpm build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "simple-git-hooks": "^2.11.1",
    "vitepress": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pretty-quick --staged"
  }
}
