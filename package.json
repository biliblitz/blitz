{
  "name": "@biliblitz/blitz",
  "version": "0.0.1",
  "description": "A blitzing minimal backend-framework for Preact",
  "type": "module",
  "types": "./dist/types/client/index.d.ts",
  "module": "./dist/esm/client/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/types/client/index.d.ts",
      "import": "./dist/esm/client/index.mjs"
    },
    "./server": {
      "types": "./dist/types/server/index.d.ts",
      "import": "./dist/esm/server/index.mjs"
    },
    "./vite": {
      "types": "./dist/types/build/index.d.ts",
      "import": "./dist/esm/build/index.mjs"
    }
  },
  "scripts": {
    "fmt": "prettier --write src",
    "dev": "node build.js --watch & tsc --build --watch",
    "build": "rm -rf dist && node build.js && tsc --build"
  },
  "license": "MIT",
  "peerDependencies": {
    "@preact/signals": "^1.2.2",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "vite": "^5.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "esbuild": "^0.19.5",
    "prettier": "^3.0.3",
    "pretty-quick": "^4.0.0",
    "simple-git-hooks": "^2.9.0",
    "tiny-glob": "^0.2.9",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@hono/node-server": "^1.4.0",
    "es-module-lexer": "^1.4.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm pretty-quick --staged"
  }
}
