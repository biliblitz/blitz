{
  "name": "@biliblitz/node-server",
  "version": "0.0.4",
  "description": "A blitzing minimal backend-framework for Preact (node-server)",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "url": "https://github.com/biliblitz/blitz"
  },
  "types": "./dist/types/index.d.ts",
  "module": "./dist/esm/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs"
    },
    "./tools": {
      "types": "./dist/types/tools.d.ts",
      "import": "./dist/esm/tools.mjs"
    }
  },
  "scripts": {
    "fmt": "prettier --write src",
    "build": "rm -rf dist && tsc --build && node build.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "esbuild": "^0.19.5",
    "tiny-glob": "^0.2.9",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "hono": "^3.12.11"
  }
}
