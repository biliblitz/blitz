{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowImportingTsExtensions": true,
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "adapters/**/*.ts",
    "vite.config.ts",
    "env.d.ts",
    "server.js",
  ],
}
