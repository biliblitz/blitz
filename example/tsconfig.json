{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "@biliblitz/blitz/env"],
    "paths": {
      "~/*": ["./app/*"],
    },
  },
  "include": ["app", "adapters", "vite.config.ts", "server.js"],
}
