{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "@biliblitz/blitz/env"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src", "adapters", "vite.config.ts", "server.js"]
}
